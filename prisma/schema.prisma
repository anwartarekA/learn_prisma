generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ROLE {
  USER
  ADMIN
  SUPERVISOR
  SUPERAMDIN
}

model User {
  id              Int           @id @default(autoincrement())
  firstName       String
  lastName        String
  age             Int
  role            ROLE          @default(USER)
  email           String        @unique
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  posts           Post[]        @relation("creatorRelation")
  favourite_posts Post[]        @relation("favouriteRelation")
  profileImage    ProfileImage?
}

model Post {
  id              String     @id @default(uuid())
  title           String
  active          Boolean
  content         Json
  creator         User       @relation("creatorRelation", fields: [user_id], references: [id])
  user_id         Int
  favouritedBy    User?      @relation("favouriteRelation", fields: [favouritedBy_id], references: [id])
  favouritedBy_id Int?
  categories      Category[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  name      String
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProfileImage {
  id        String   @id @default(uuid())
  url       String
  user      User     @relation(fields: [user_id], references: [id])
  user_id   Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
